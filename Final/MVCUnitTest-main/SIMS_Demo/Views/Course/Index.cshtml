@model IEnumerable<SIMS_Demo.Models.Course>

<h1>Courses</h1>

<p>Hello @ViewBag.UserName, you are @ViewBag.UserRole</p>

<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Day</th>
            <th>Slot</th>
            <th>RoomNumber</th>
            <th>Teacher</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Subject</td>
                <td>@course.Time</td>
                <td>@course.Slot</td>
                <td>@course.RoomNumber</td>
                <td>@course.Teacher</td>
                <td>
                    <button id="enrollButton_@course.Id" class="btn btn-primary" onclick="enroll(@course.Id)">Enroll Me</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@* JavaScript code to handle enrollment and hide button *@
<script>
    function enroll(courseId) {
        // Add AJAX call to enroll the user in the course
        // Display success message
        alert("You have successfully enrolled!");

        // Hide the button after enrollment
        var buttonId = "enrollButton_" + courseId;
        document.getElementById(buttonId).style.display = "none";
    }
</script>
