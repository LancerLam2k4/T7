@model User
@{
    string userName = ViewBag.UserName;
    string userRole = ViewBag.Role;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Welcome</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .card-container {
            max-width: 800px;
            margin: 100px auto;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            border-radius: 10px;
            margin-bottom: 20px;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
            }

        .container {
            padding: 2px 16px;
        }

        .animation {
            width: 100%;
            border-radius: 10px 10px 0 0;
        }
    </style>
</head>
<body>
    <div class="container card-container">
        <div class="card">
            <img class="card-img-top animation" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRIPaw2iXisgLjao3fcr0Jq24lOMOKYXS5NpIfxlLA7xQ&s" alt="Card image">
            <div class="container">
                <h4 class="card-title">Welcome Back, @userName!</h4>
                <p>Your Role: @userRole</p>
                <p>Description: Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla venenatis mauris sed velit dictum, sit amet sodales odio consequat.</p>
            </div>
        </div>
    </div>
</body>
</html>
