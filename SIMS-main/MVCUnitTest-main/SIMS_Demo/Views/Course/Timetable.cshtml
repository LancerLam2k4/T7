@model IEnumerable<SIMS_Demo.Models.Course>


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Timetable</title>
    <!-- Thêm các tài nguyên CSS cần thiết cho bảng thời gian -->
    <style>
        /* CSS cho bảng thời gian */
        table {
            font-family: Arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        h1 {
            text-align:center;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Timetable</h1>
    <table>
        <thead>
            <tr>
                <th>Subject</th>
                <th>Time</th>
                @*<th>Time</th>*@
                <th>Slot</th>
                <th>Room Number</th>
                <th>Teacher</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Subject</td>
                    <td>@course.Time.ToShortTimeString() - @course.Time.ToShortDateString()</td>
                    <td>@course.Slot</td>
                    <td>@course.RoomNumber</td>
                    <td>@course.Teacher</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
