@model IEnumerable<SIMS_Demo.Models.User>
@{
    Layout = "Layout_Teacher";
    string userName = ViewBag.UserName;
}
<style>
    h1 {
        text-align:center;
    }
</style>
<h1>Admin Dashboard</h1>
<p>Welcome Back @userName</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Major</th>
            <th>Core</th>
            <th>Status</th>

            <th>Action</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name </td>
            <td>@item.Email</td>
            <td>@item.Major</td>
            <td>@item.Core</td>
            <td>@item.Status</td>

            <td>
                <a class="btn btn-sm btn-primary"
                   href="@Url.Action("Edit","HomeAdmin",new {id=item.Id})">Edit</a>
                <a class="btn btn-sm btn-primary"
                   href="@Url.Action("Delete","HomeAdmin",new {id=item.Id})">Delete</a>
            </td>
        </tr>
    }
</table>

<ul>
    <li><a asp-controller="Teacher" asp-action="NewTeacher">New Teacher</a></li>
</ul>



