@model SIMS_Demo.Models.Course
@{
    Layout = "Layout_Admin";
    ViewData["Title"] = "New Course";
}
<style>
    h1 {
        margin-top: 50px;
    }
</style>

<h1>New Course</h1>

@using (Html.BeginForm("NewCourse", "HomeAdmin", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Slot, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Slot, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Slot, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RoomNumber, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.RoomNumber, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.RoomNumber, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Teacher, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.Teacher, new SelectList(ViewBag.Teachers), "Select Teacher", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Teacher, "", new { @class = "text-danger" })
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
}
